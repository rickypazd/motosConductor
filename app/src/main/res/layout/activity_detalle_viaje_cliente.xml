<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Detalle_viaje_Cliente">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_detalle_viaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroundcolor2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detalle del viaje"
                android:textColor="@color/colorWhite"
                android:textSize="25dp"
                android:fontFamily="sans-serif"
                android:textStyle="normal" />
        </android.support.v7.widget.Toolbar>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:paddingTop="30dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/img_perfil_conductor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_miperfil" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/text_nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ricardo sebastian figueroa "
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/text_placa_telefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ic_redondo1_finalizar"
                    android:text="35454fbc Â° +591 7765342"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/text_direccion_inicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10sp"
            android:background="@drawable/ic_button_border_black"
            android:drawableLeft="@drawable/ic_icon_pointer_map"
            android:padding="5dp"
            android:paddingEnd="10dp"
            android:drawablePadding="5dp"
            android:text="direccion direcion"
            android:textColor="@color/colorGris"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/text_direccion_fin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5sp"
            android:background="@drawable/ic_button_border_black"
            android:padding="5dp"
            android:drawableLeft="@drawable/ic_icon_pointer_map2"
            android:drawablePadding="5dp"
            android:paddingEnd="10dp"
            android:text="direccion"
            android:textColor="@color/colorGris"
            android:inputType="textMultiLine"
            android:textSize="15dp" />

        <Button
            android:id="@+id/btn_ver_recorrido"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_redondo1_finalizar"
            android:text="Ver recorrido"
            android:textAllCaps="false"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"

            android:textColor="@color/colorWhite" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo viaje"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:textColor="#626262"/>

                <TextView
                    android:id="@+id/text_tipo_carrera"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="siete estandar"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#626262"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="domingo , 11:30 p.m"
                    android:textSize="15sp"
                    android:layout_weight="1"
                    android:textColor="#626262"/>

                <TextView
                    android:id="@+id/text_auto_marca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Kia picanto"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="#626262"/>

            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:background="#626262"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Forma de pago"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/text_tipo_pago"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="Efectivo"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textColor="@color/colorGris"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginEnd="30sp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_html_tipos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="@color/colorBlack"/>

                <TextView
                    android:id="@+id/text_html_montos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:textColor="@color/colorGris"
                    android:textSize="18sp" />

            </LinearLayout>



            </LinearLayout>
        </FrameLayout>
</LinearLayout>