<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Cofirmar_Carrera">

    <TextView
        android:id="@+id/tv_tipo_siete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="iMoto"
        android:layout_marginTop="36dp"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editInicio"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/botonred"
            android:drawableLeft="@drawable/ic_marca_de_localizacion"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="#000" />

        <EditText
            android:id="@+id/editLlegada"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/botonred"
            android:drawableLeft="@drawable/ic_marca_de_localizacion"
            android:inputType="textPersonName"
            android:paddingLeft="10dp"
            android:textColor="#000" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="42dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/botonred"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColor="#000" />

        <EditText
            android:id="@+id/editaPuntacion"
            android:layout_width="160dp"
            android:layout_height="44dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/botonred"
            android:drawableRight="@drawable/ic_estrella"
            android:inputType="textPersonName"
            android:paddingRight="15dp"
            android:visibility="gone"
            android:textAlignment="center"
            android:textColor="#000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_aceptar_Carrera"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_foreground"
            android:backgroundTint="#dddddd"
            android:text="Confirmar Viaje" />


        <Button
            android:id="@+id/btn_rechazar_Carrera"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_btn_rechazar"
            android:text="Rechazar  Viaje "
            android:textColor="#fff" />
    </LinearLayout>


</LinearLayout>